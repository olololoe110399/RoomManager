<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddCustomerActivity">
    <include
        android:id="@+id/app_bar"
        layout="@layout/tool_bar"></include>

    <ImageView
        android:id="@+id/imgCustomer"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:src="@drawable/icon_person"
        android:layout_below="@+id/app_bar"/>
    <TextView
        android:id="@+id/tvImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh"
        android:gravity="center"
        android:textColor="#E91E63"
        android:layout_marginVertical="5dp"
        android:layout_below="@id/imgCustomer"/>
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số điện thoại"
        android:layout_below="@+id/tvImg"
        android:background="#DFDFDE"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0935029976"
        android:layout_below="@+id/tvPhone"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Họ và tên"
        android:layout_below="@+id/edtPhone"
        android:background="#DFDFDE"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Trần Văn A"
        android:layout_below="@+id/tvName"/>
    <TextView
        android:id="@+id/tvCMND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số CMND"
        android:layout_below="@+id/edtName"
        android:background="#DFDFDE"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/edtCMND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="212796028"
        android:layout_below="@+id/tvCMND"/>
    <TextView
        android:id="@+id/tvCMNDImgBefore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ảnh chụp CMND"
        android:layout_below="@+id/edtCMND"
        android:background="#DFDFDE"
        android:padding="10dp"/>
    <LinearLayout
        android:id="@+id/layoutCMND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvCMNDImgBefore"
        android:weightSum="10">
        <ImageView
            android:id="@+id/imgCMNDBefore"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="119dp"
            android:src="@drawable/avatar" />
        <ImageView
            android:id="@+id/imgCMNDAfter"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="119dp"
            android:src="@drawable/avatar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layoutCMND"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy" />
    </LinearLayout>

</RelativeLayout>